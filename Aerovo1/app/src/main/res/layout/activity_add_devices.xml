<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddDevices">

    <EditText
        android:id="@+id/etnumber"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#fff"
        android:hint="Serienummer"
        android:paddingLeft="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/etwifi"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#fff"
        android:hint="Wifi naam"
        android:paddingLeft="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etnumber"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/etwifiWachtwoord"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="#fff"
        android:hint="Wifi wachtwoord"
        android:paddingLeft="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etwifi"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnBevestigen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="?attr/colorButtonNormal"
        android:text="Bevestigen"
        android:textColor="#000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etwifiWachtwoord"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnWelcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="?attr/colorButtonNormal"
        android:text="Annuleren"
        android:textColor="#000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnBevestigen"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>