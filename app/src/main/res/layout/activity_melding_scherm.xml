<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MeldingScherm">

    <include
        android:id="@+id/include_top_meldingen"
        layout="@layout/top_bar"
        android:layout_width="0dp"
        android:layout_height="122dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/menu_button_main"
        android:layout_width="131dp"
        android:layout_height="122dp"
        android:background="#00FBFBFB"
        android:onClick="showMenu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Recente_meldingen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Recente_meldingen"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/include_top_meldingen" />

    <TextView
        android:id="@+id/melding1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/melding_placeholder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Recente_meldingen"
        app:layout_constraintBottom_toTopOf="@id/melding2"
        tools:layout_editor_absoluteX="175dp"
        tools:layout_editor_absoluteY="195dp" />

    <TextView
        android:id="@+id/melding2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/melding_placeholder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/melding1"
        app:layout_constraintBottom_toTopOf="@id/melding3" />

    <TextView
        android:id="@+id/melding3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/melding_placeholder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/melding2"
        app:layout_constraintBottom_toTopOf="@id/melding4" />

    <TextView
        android:id="@+id/melding4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/melding_placeholder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/melding3"
        app:layout_constraintBottom_toTopOf="@id/melding5"/>

    <TextView
        android:id="@+id/melding5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/melding_placeholder"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/melding3" />


</androidx.constraintlayout.widget.ConstraintLayout>